# MT5 Configuration
MT5_LOGIN=your_mt5_login
MT5_PASSWORD=your_mt5_password
MT5_SERVER=your_mt5_server
MT5_PATH=C:\\Program Files\\MetaTrader 5\\terminal64.exe

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Alert Settings
PRICE_CHECK_INTERVAL=5
ENABLE_TRADE_ALERTS=true
ENABLE_ORDER_ALERTS=true
ENABLE_PRICE_ALERTS=true

# Synthetic Indices to Monitor (comma-separated)
# Common options: Volatility 25/50/75/100 Index, Step Index, Boom 1000 Index, Crash 1000 Index, Jump 50/75/100 Index
MONITORED_SYMBOLS=Volatility 25 Index,Volatility 50 Index,Volatility 75 Index,Volatility 100 Index,Step Index,Boom 1000 Index,Crash 1000 Index,Jump 50 Index,Jump 75 Index,Jump 100 Index

# Profit-Taking Suggestions
ENABLE_PROFIT_SUGGESTIONS=true
MIN_PROFIT_FOR_SUGGESTION=10.0
PROFIT_PERCENTAGE_THRESHOLD=5.0

# Pending Order Monitoring
ENABLE_PENDING_ORDER_ALERTS=true
PENDING_ORDER_PROXIMITY_PCT=1.0

# Risk Management Alerts
# Enable/disable risk alerts. If set to true, alerts for margin, drawdown, and risk breaches will be sent.
ENABLE_RISK_ALERTS=true

# When margin level (%) drops below this value, a warning alert will be triggered (e.g., 150 means 150%)
MARGIN_LEVEL_WARNING=150.0

# If margin level (%) drops below this critical threshold, a critical alert will be sent (e.g., 100 means 100%)
MARGIN_LEVEL_CRITICAL=100.0

# Maximum allowed position size as a percentage of account balance. Alerts if a single position exceeds this (e.g., 20 means 20% of account value max per position)
MAX_POSITION_SIZE_PCT=20.0

# Daily loss limit as a percentage of starting balance. If daily loss exceeds this percent, an alert will be sent (e.g., 5 means 5% daily loss triggers alert)
DAILY_LOSS_LIMIT_PCT=5.0

# Absolute daily loss limit in account currency. If daily loss exceeds this amount (e.g., 0 disables this alert)
DAILY_LOSS_LIMIT_AMOUNT=0.0

# Maximum drawdown from starting balance permitted (in percent). If exceeded, an alert is sent (e.g., 10 means 10% drawdown triggers alert)
DRAWDOWN_LIMIT_PCT=10.0

