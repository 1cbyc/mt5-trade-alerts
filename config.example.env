# MT5 Configuration
MT5_LOGIN=your_mt5_login
MT5_PASSWORD=your_mt5_password
MT5_SERVER=your_mt5_server
MT5_PATH=C:\\Program Files\\MetaTrader 5\\terminal64.exe

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Alert Settings
PRICE_CHECK_INTERVAL=5
ENABLE_TRADE_ALERTS=true
ENABLE_ORDER_ALERTS=true
ENABLE_PRICE_ALERTS=true

# Synthetic Indices to Monitor (comma-separated)
# Common options: Volatility 25/50/75/100 Index, Step Index, Boom 1000 Index, Crash 1000 Index, Jump 50/75/100 Index
MONITORED_SYMBOLS=Volatility 25 Index,Volatility 50 Index,Volatility 75 Index,Volatility 100 Index,Step Index,Boom 1000 Index,Crash 1000 Index,Jump 50 Index,Jump 75 Index,Jump 100 Index

# Profit-Taking Suggestions
ENABLE_PROFIT_SUGGESTIONS=true
MIN_PROFIT_FOR_SUGGESTION=10.0
PROFIT_PERCENTAGE_THRESHOLD=5.0

# Pending Order Monitoring
ENABLE_PENDING_ORDER_ALERTS=true
PENDING_ORDER_PROXIMITY_PCT=1.0

# Risk Management Alerts
# Enable/disable risk alerts. If set to true, alerts for margin, drawdown, and risk breaches will be sent.
ENABLE_RISK_ALERTS=true

# When margin level (%) drops below this value, a warning alert will be triggered (e.g., 150 means 150%)
MARGIN_LEVEL_WARNING=150.0

# If margin level (%) drops below this critical threshold, a critical alert will be sent (e.g., 100 means 100%)
MARGIN_LEVEL_CRITICAL=100.0

# Minimum balance threshold for margin alerts. Only alerts if balance is below this amount (prevents false alerts when no positions)
# Set to 25.0 to only alert for accounts with $25 or less
MARGIN_ALERT_MIN_BALANCE=25.0

# Maximum allowed position size as a percentage of account balance. Alerts if a single position exceeds this (e.g., 20 means 20% of account value max per position)
MAX_POSITION_SIZE_PCT=20.0

# Daily loss limit as a percentage of starting balance. If daily loss exceeds this percent, an alert will be sent (e.g., 5 means 5% daily loss triggers alert)
DAILY_LOSS_LIMIT_PCT=5.0

# Absolute daily loss limit in account currency. If daily loss exceeds this amount (e.g., 0 disables this alert)
DAILY_LOSS_LIMIT_AMOUNT=0.0

# Maximum drawdown from starting balance permitted (in percent). If exceeded, an alert is sent (e.g., 10 means 10% drawdown triggers alert)
DRAWDOWN_LIMIT_PCT=10.0

# Daily Performance Summary
# Enable/disable daily performance summary. If enabled, a comprehensive summary will be sent at the configured time
ENABLE_DAILY_SUMMARY=true

# Hour to send daily summary (24-hour format, 0-23). Default is 23 (11 PM)
DAILY_SUMMARY_HOUR=23

# Minute to send daily summary (0-59). Default is 0
DAILY_SUMMARY_MINUTE=0

# Advanced Price Level Features
# Enable price level groups - alert when multiple levels in a group are triggered
ENABLE_PRICE_LEVEL_GROUPS=true

# Dynamic Support/Resistance Level Detection
# Enable automatic detection of support/resistance levels from historical data
ENABLE_DYNAMIC_LEVELS=false

# MT5 timeframe for dynamic level detection (16385 = H1, 16408 = H4, 16388 = D1)
# See MetaTrader5 documentation for all timeframe constants
DYNAMIC_LEVELS_TIMEFRAME=16385

# Number of historical periods to analyze for dynamic levels
DYNAMIC_LEVELS_PERIODS=100

# Minimum number of price touches required for a valid support/resistance level
DYNAMIC_LEVELS_MIN_TOUCHES=2

# Tolerance percentage for grouping similar price levels (0.5 = 0.5%)
DYNAMIC_LEVELS_TOLERANCE_PCT=0.5

# Auto-update interval for dynamic levels (in hours). Levels will be re-detected at this interval
DYNAMIC_LEVELS_AUTO_UPDATE_HOURS=24

# Enhanced Monitoring
# Enable connection health monitoring - alerts if MT5 disconnects
ENABLE_CONNECTION_HEALTH_MONITORING=true

# Connection check interval in seconds
CONNECTION_CHECK_INTERVAL=30

# Alert Rate Limiting
# Enable alert rate limiting to prevent spam
ENABLE_ALERT_RATE_LIMITING=true

# Maximum number of alerts per minute
MAX_ALERTS_PER_MINUTE=10

# Maximum number of alerts per hour
MAX_ALERTS_PER_HOUR=100

# Alert Grouping/Batching
# Enable alert grouping to batch similar alerts together
ENABLE_ALERT_GROUPING=true

# Time window in seconds to batch alerts together
ALERT_BATCH_WINDOW_SECONDS=30

# Maximum number of alerts per batch
ALERT_BATCH_MAX_SIZE=10

# Quiet Hours
# Enable quiet hours to suppress non-critical alerts during specific times
QUIET_HOURS_ENABLED=false

# Quiet hours start time (24-hour format, 0-23)
QUIET_HOURS_START_HOUR=22

# Quiet hours start minute (0-59)
QUIET_HOURS_START_MINUTE=0

# Quiet hours end time (24-hour format, 0-23)
QUIET_HOURS_END_HOUR=8

# Quiet hours end minute (0-59)
QUIET_HOURS_END_MINUTE=0

# Trade History & Analytics
# Enable trade history database (SQLite)
ENABLE_TRADE_HISTORY=true

# Path to SQLite database file for trade history
TRADE_HISTORY_DB_PATH=trade_history.db

# Enable chart generation (requires matplotlib)
ENABLE_CHARTS=true

# ML-based Profit Suggestions
# Enable ML-enhanced profit-taking suggestions that learn from your trading behavior
ENABLE_ML_PROFIT_SUGGESTIONS=true

# Minimum number of trades needed for ML to learn patterns (default: 10)
ML_MIN_TRADES_FOR_LEARNING=10

# Volatility-based Position Sizing
# Enable volatility-based position sizing suggestions
ENABLE_VOLATILITY_POSITION_SIZING=true

# Number of periods to use for volatility calculation (default: 20)
VOLATILITY_PERIODS=20

# Advanced Notifications
# Enable price charts in alerts (attaches price chart images to price level alerts)
ENABLE_PRICE_CHARTS_IN_ALERTS=true

# Number of periods to show in price charts (default: 50)
PRICE_CHART_PERIODS=50

# Discord Notifications
# Enable Discord webhook notifications
ENABLE_DISCORD_NOTIFICATIONS=false

# Discord webhook URL (get from Discord channel settings > Integrations > Webhooks)
# Example: https://discord.com/api/webhooks/123456789/abcdefghijklmnopqrstuvwxyz
DISCORD_WEBHOOK_URL=

# Email Notifications
# Enable email notifications
ENABLE_EMAIL_NOTIFICATIONS=false

# SMTP server for email (e.g., smtp.gmail.com, smtp.outlook.com)
EMAIL_SMTP_SERVER=smtp.gmail.com

# SMTP port (587 for TLS, 465 for SSL, 25 for non-encrypted)
EMAIL_SMTP_PORT=587

# Email sender address
EMAIL_SENDER=your_email@gmail.com

# Email sender password (use app password for Gmail)
EMAIL_SENDER_PASSWORD=your_app_password

# Email recipients (comma-separated list)
EMAIL_RECIPIENTS=recipient1@example.com,recipient2@example.com

# Use TLS for email (true for port 587, false for port 465 with SSL)
EMAIL_USE_TLS=true

# Webhook Notifications
# Enable custom webhook notifications
ENABLE_WEBHOOK_NOTIFICATIONS=false

# Webhook URL for custom notifications
WEBHOOK_URL=https://your-webhook-url.com/api/notifications

# Optional: Custom headers for webhook (JSON format)
# Example: {"Authorization": "Bearer token123", "X-Custom-Header": "value"}
WEBHOOK_HEADERS=

